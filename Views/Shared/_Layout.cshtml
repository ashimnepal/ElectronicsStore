<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicsStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ElectronicsStore.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-laptop-code me-2"></i>ElectronicsStore
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="Index">
                                    <i class="fas fa-box me-1"></i>My Orders
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-cogs me-1"></i>Admin
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Category" asp-action="Index">
                                    <i class="fas fa-tags me-1"></i>Categories
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="Index">
                                    <i class="fas fa-boxes me-1"></i>Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="ManageOrders">
                                    <i class="fas fa-truck me-1"></i>Manage Orders
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <div class="d-flex align-items-center me-3">
                        @await Component.InvokeAsync("CartSummary")
                    </div>
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <main class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Mega Footer -->
    <footer class="mt-5 pt-5 bg-dark text-white">
        <!-- Top Section with Newsletter -->
        <div class="container py-4 border-bottom border-secondary">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h4 class="text-white mb-0">Subscribe to Our Newsletter</h4>
                    <p class="text-light mb-0">Get the latest updates, deals and exclusive offers</p>
                </div>
                <div class="col-md-6">
                    <form class="d-flex">
                        <input type="email" class="form-control me-2" placeholder="Your Email Address">
                        <button class="btn btn-primary">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Main Footer Content -->
        <div class="container py-5">
            <div class="row">
                <!-- About Us Column -->
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase text-white">Electronics Store</h5>
                    <p class="text-light mt-3">Your one-stop shop for all electronic needs. We offer the latest gadgets, computers, and accessories at competitive prices.</p>
                    <div class="d-flex mt-4">
                        <a href="#" class="text-white me-3 fs-5"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3 fs-5"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white me-3 fs-5"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white me-3 fs-5"><i class="fab fa-youtube"></i></a>
                        <a href="#" class="text-white me-3 fs-5"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                
                <!-- Quick Links Column -->
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase text-white mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Index" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>Home</a></li>
                        <li class="mb-2"><a asp-controller="Product" asp-action="Index" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>Products</a></li>
                        <li class="mb-2"><a asp-controller="Category" asp-action="Index" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>Categories</a></li>
                        <li class="mb-2"><a asp-controller="Account" asp-action="Profile" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>My Account</a></li>
                        <li class="mb-2"><a asp-controller="Order" asp-action="Index" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>My Orders</a></li>
                    </ul>
                </div>
                
                <!-- Customer Service Column -->
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase text-white mb-3">Customer Service</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>Help Center</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>How to Buy</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>Shipping & Delivery</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>Returns & Refunds</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>Payment Methods</a></li>
                        <li class="mb-2"><a href="#" class="text-light text-decoration-none"><i class="fas fa-angle-right me-2"></i>Contact Us</a></li>
                    </ul>
                </div>
                
                <!-- Contact Info Column -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase text-white mb-3">Contact Info</h5>
                    <p class="text-light mb-2"><i class="fas fa-map-marker-alt me-2"></i>123 Tech Street, Digital City</p>
                    <p class="text-light mb-2"><i class="fas fa-phone-alt me-2"></i>(123) 456-7890</p>
                    <p class="text-light mb-2"><i class="fas fa-envelope me-2"></i>info@electronicsstore.com</p>
                    <p class="text-light mb-2"><i class="fas fa-clock me-2"></i>Mon-Sat: 9AM - 6PM</p>
                    
                    
                </div>
            </div>
        </div>
        
        <!-- Copyright Section -->
        <div class="bg-darker py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="text-light mb-0">&copy; @DateTime.Now.Year - Electronics Store. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none me-3">Privacy Policy</a>
                        <a href="#" class="text-light text-decoration-none me-3">Terms of Service</a>
                        <a href="#" class="text-light text-decoration-none">Site Map</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     @await RenderSectionAsync("Scripts", required: false)  <!--Renders any scripts defined in child views that are placed in the "Scripts" section -->
</body>
</html>

