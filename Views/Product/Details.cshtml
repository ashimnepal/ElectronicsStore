@model ElectronicsStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Product Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="max-height: 200px;" />
                        </div>
                        <div class="col-md-8">
                            <h3>@Model.Name</h3>
                            <div class="badge bg-info mb-2">@Model.Category?.Name</div>
                            <h4 class="text-primary mb-3">@Model.Price.ToString("C")</h4>
                            
                            <div class="mb-3">
                                <span class="fw-bold">Availability: </span>
                                @if (Model.IsAvailable && Model.StockQuantity > 0)
                                {
                                    <span class="badge bg-success">In Stock (@Model.StockQuantity)</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="text-muted">Description</h5>
                            <hr />
                            <p>@Model.Description</p>
                            
                            <dl class="row mt-4">
                                <dt class="col-sm-3">ID</dt>
                                <dd class="col-sm-9">@Model.Id</dd>
                                
                                <dt class="col-sm-3">Category</dt>
                                <dd class="col-sm-9">@Model.Category?.Name</dd>
                                
                                <dt class="col-sm-3">Price</dt>
                                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
                                
                                <dt class="col-sm-3">Stock</dt>
                                <dd class="col-sm-9">@Model.StockQuantity</dd>
                                
                                <dt class="col-sm-3">Status</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Unavailable</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list me-2"></i>Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">
                                <i class="fas fa-trash me-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 